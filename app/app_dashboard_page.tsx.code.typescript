    try {
      // TODO: Criar endpoint de estatísticas
      // Dados mockados por enquanto
      setStats({
        totalClientes: 248,
        totalVendas: 89,
        receitaMes: 125000,
        taxaConversao: 35.9,
      })
    } catch (error) {
      console.error('Erro ao carregar estatísticas:', error)
    } finally {
      setLoading(false)
    }
  }

  const statCards = [
    {
      title: 'Total de Clientes',
      value: stats.totalClientes,
      icon: Users,
      change: '+12.5%',
      positive: true,
      color: 'blue',
    },
    {
      title: 'Vendas no Mês',
      value: stats.totalVendas,
      icon: ShoppingCart,
      change: '+8.2%',
      positive: true,
      color: 'green',
