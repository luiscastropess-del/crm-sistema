      value: `R$ ${stats.receitaMes.toLocaleString('pt-BR')}`,
      icon: DollarSign,
      change: '+23.1%',
      positive: true,
      color: 'purple',
    },
    {
      title: 'Taxa de Conversão',
      value: `${stats.taxaConversao}%`,
      icon: TrendingUp,
      change: '-2.4%',
